<Window x:Class="LocalHostPortScanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LocalHostPortScanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="textBoxFrom" HorizontalAlignment="Left" Margin="10,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="20" PreviewTextInput="textBoxFrom_PreviewTextInput"/>
        <TextBox x:Name="textBoxTo" HorizontalAlignment="Left" Margin="282,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Height="20" PreviewTextInput="textBoxTo_PreviewTextInput"/>
        <Button x:Name="buttonStart" Content="START" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Width="100" Height="20" Click="buttonStart_Click"/>
        <Button x:Name="buttonStop" Content="STOP" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top" Width="100" Height="20" Click="buttonStop_Click" IsEnabled="False"/>
        <Label x:Name="labelHost" Content="" HorizontalAlignment="Left" Margin="190,59,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listBoxHosts" Margin="10,123,10,10"/>
    </Grid>
</Window>
